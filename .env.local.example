# ============================================
# Epoch Press — Environment Variables
# Copy to .env.local and fill in your values
# ============================================

# App environment (dev | staging | prod)
APP_ENV=dev
NEXT_PUBLIC_APP_ENV=dev

# Default site (used for localhost fallback)
NEXT_PUBLIC_DEFAULT_SITE=epoch-press

# Site URL
NEXT_PUBLIC_SITE_URL=http://localhost:3010

# Supabase (create a new project at supabase.com)
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=

# Admin auth JWT secret (generate a random string)
JWT_SECRET=change-me-in-production

# Email — Resend (resend.com)
RESEND_API_KEY=
RESEND_FROM=no-reply@epochpress.com
CONTACT_FALLBACK_TO=info@epochpress.com
ALERT_TO=

# Optional staging/prod specific Supabase keys
# SUPABASE_STAGING_URL=
# SUPABASE_STAGING_SERVICE_ROLE_KEY=
# SUPABASE_PROD_URL=
# SUPABASE_PROD_SERVICE_ROLE_KEY=
